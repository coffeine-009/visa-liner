{
  "manifest_version": 2,

  "name": "Visa-liner",
  "description": "Registration for getting visa.",
  "version": "1.0",

  "icons": {
    "256": "icon.png"
  },

  "background": {
    "scripts": [
      "assets/js/app.js"
    ]
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["https://visapoint.eu/*"],
//      "css": ["mystyles.css"],
      "js": [
//        "jquery.js",
        "content.js"
      ]
    },
    //- Set flag: "I am not bot" -//
    {
      "js": [
        "assets/js/app/view/captcha/google/captcha-start.js"
      ],
      "matches": [
//        "http://www.polandvisa-ukraine.com/scheduleappointment_2.html"
//        "https://polandonline.vfsglobal.com/poland-ukraine-appointment/*"
        "https://www.google.com/recaptcha/api2/anchor*"
      ],
      "all_frames":true
    },
    //- Answer -//
    {
      "js": [
        "assets/js/app/view/captcha/google/captcha-finish.js"
      ],
      "matches": [
        "https://www.google.com/recaptcha/api2/frame*"
      ],
      "all_frames":true
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "activeTab",
    "notifications",
    "storage",
    "https://visapoint.eu/",
    "https://rucaptcha.com/"
  ]
}
